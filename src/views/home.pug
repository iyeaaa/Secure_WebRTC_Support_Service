doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom 
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Noom 
        main
            div#welcome
                form
                    input(placeholder="Room name", required, type=text)
                    button#enterBtn Enter
            div#myStream
                video#myVideo(autoplay, playsinline, width=400, height=400)
                button#muteBtn Mute
                button#cameraBtn Turn Camera Off
        script(src='/socket.io/socket.io.js')
        script(src="/public/js/app.js")  